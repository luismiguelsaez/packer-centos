{
    "builders": [
        {
            "boot_command": [
                "<tab> text append net.ifnames=0 biosdevname=0 ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
            ],
            "communicator": "ssh",
            "guest_os_type": "RedHat_64",
            "http_directory": "http",
            "iso_checksum": "sha256:659691c28a0e672558b003d223f83938f254b39875ee7559d1a4a14c79173193",
            "iso_urls": [
                "http://mirror.airenetworks.es/CentOS/7/isos/x86_64/CentOS-7-x86_64-Minimal-2003.iso",
                "file://isos/CentOS-7-x86_64-Minimal-1804.iso"
            ],
            "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
            "shutdown_timeout": "15m",
            "ssh_password": "{{user `ssh_pass`}}",
            "ssh_timeout": "10m",
            "ssh_username": "{{user `ssh_name`}}",
            "type": "virtualbox-iso"
        }
    ],
    "provisioners": [
        {
            "playbook_file": "./play.yml",
            "type": "ansible",
            "user": "{{user `ssh_name`}}"
        }
    ],
    "post-processors": [
        {
            "type": "amazon-import",
            "access_key": "MyAccessKey",
            "secret_key": "THISISSECRET",
            "region": "us-east-1",
            "s3_bucket_name": "test.domain.com"
        }
    ],
    "variables": {
        "ssh_name": "vagrant",
        "ssh_pass": "vagrant"
    }
}